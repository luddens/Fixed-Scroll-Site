.noScroll{
  overflow: hidden;
}

a{
  text-decoration: none;
  color: white;
}

.current a{
  color: black;
}

header h1{
  float: left;
  font-size: 3em;
}

header ul{
  float: right;
  background-color: green;
}

header li{
  display: inline-block;
  list-style: none;
  margin: 5px;
  font-size: 1.25em;
  border-radius: 5px;
  padding: 2.5px;
  padding-left: 10px;
  padding-right: 10px;
}

.mini{
  height: 50px;
  opacity: 1;
  // color: #A29FA0;
}

$headCol: #FFFFFF;
$border: 2px solid white;
$headerHeight: 100px;
$headerSmallHeight: 50px;

header{
  height: $headerHeight;
  top: -$headerHeight;
  position: fixed;
  background-color: rgba( 1, 1, 1, 1);
  width: 100%;
  z-index: 5;
  color: white;
  padding-left: 4vw;
  padding-right: 4vw;
  box-sizing: border-box;
  border-bottom: $border;
}


.container{
  width: 800px;
  margin: auto;
  height: 100%;
  position: relative;
}
#freeScroll.page{
  height: 200vh;
  // height: 100vh;
}

#banner{
  z-index: 2;
  margin: auto;
}

#benefits{
  // background-color: red;
}

footer{
  height: 20vh;
  max-height: 100px;
  min-height: 30px;
  background-color: #D8D8D8;
  background-color: rgba(0,0,0, 1);
  width: 100%;
  position: fixed;
  bottom: -20vh;
  border-top: $border;
}

.fixedFooter{
  bottom: 0vh;
}

#scrollBounds{
  height: 50%;
  width: 25px;
  top: 0px;
  bottom: 0px;
  margin:auto;
  position: fixed;
  background-color: #D8D8D8;
  z-index: 4;
  border-radius: 15px;
  overflow: hidden;
  margin-left: -30px;
  border: 2px solid white;

  a{
    color: #D8D8D8;
    position: absolute;
    margin: auto;
    bottom: 10px;
    left: 30%;
  }
}

.invis{
  opacity: 1;
}

#overlay{
  background-color: black;
  opacity: 0;
  width: 100%;
  height: 100%;
  position: absolute;
}

.anim{
  -webkit-transition: all 1s; // Chrome
  -moz-transition: all 1s; // Mozilla
  -o-transition: all 1s; // Opera
  transition: all 1s; 
}

// .scrollAnim{
//   -webkit-transition: margin-left 1s; // Chrome
//   -moz-transition: margin-left 1s; // Mozilla
//   -o-transition: margin-left 1s; // Opera
//   transition: margin-left 1s; 
// }

.anim2{
  -webkit-transition: all .75s, bottom .25s, opacity 2s; // Chrome
  -moz-transition: all .75s, bottom .25s, opacity 2s; // Mozilla
  -o-transition: all .75s, bottom .25s, opacity 2s; // Opera
  transition: all .75s, bottom .25s, opacity 2s; 
}

#scrollBar{
  height: 100%;
  width: 100%;
  background-color: black;
  position: absolute;
  padding: 0px;
  margin: 0px;
}

.sidebar{
  position: fixed;
  z-index: 3;
  top: 0px;
}

.above{
  top: 100%;
  opacity: 0;
}

.beneath{
  top: -100%;
  opacity: 0;
}
 
.current{
  background-color: white;
}

#services .sidebar{
  // transform: translateY(5.5%);
  // margin-top: calc(70px);
  height: 100%;
  width: 45%;
  // float: right;
  // right: 50%;
  left: 50%;
  // background-color: #D8D8D8;
  background:         linear-gradient(to right, rgba(225, 225, 225, 1) 0%, rgba(225, 225, 225, 1) 80%,  rgba(225, 225, 225, 0) 150%);
  background: -webkit-linear-gradient(to right, rgba(225, 225, 225, 1) 0%, rgba(225, 225, 225, 1) 80%,  rgba(225, 225, 225, 0) 150%);
}

#testimonials .sidebar{
  // transform: translateY(5.5%);
  // margin-top: calc(70px);
  height: 100%;
  background-color: #D8D8D8;
  width: 45%;
  right: 50%;
  background:         linear-gradient(to right, rgba(255, 225, 225, 0) -50%, rgba(225, 225, 225, 1) 20%,  rgba(255, 255, 255, 2) 150%);
  background: -webkit-linear-gradient(to right, rgba(255, 255, 225, 0) -50%, rgba(225, 225, 225, 1) 20%,  rgba(255, 255, 255, 2) 150%);
}

#benefits .sidebar{
  // margin-top: 70px;
  height: 45%;
  background-color: #D8D8D8;
  width: 75%;
  left: 12.5%;
  background:         linear-gradient(to bottom, rgba(255, 255, 255, 0) -50%, rgba(255, 255, 255, 1) 20%,  rgba(255, 255, 255, 2) 100%);
  background: -webkit-linear-gradient(to bottom, rgba(255, 255, 255, 0) -50%, rgba(255, 255, 255, 1) 20%,  rgba(255, 255, 255, 2) 100%);

}

