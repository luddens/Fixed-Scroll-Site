#banner{
  // background-image: url('');
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover auto;
  background-position: 50%, 50%;
  background-color: #DDDDDD;
  padding: 0px;
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.vert .base{
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20px;
  padding-right: 20px;
  position: relative;
}

.vert .block{
  height: 50%;
  background-color: yellow;
  background-color: rgba(#FFFF00, $alpha);
} 

#testimonials .base{
  background-color: green;
  background-color: rgba(#008000, $alpha);
  right: 0px;
  float: right;
}

.darkHalfOpac{
  background-color: rgba( 100, 100, 100, .25);
}

#services .base{
  background-color: red;
  background-color: rgba(#FF0000, $alpha);
  left: 0px;
  float: left;
}

.page{
  padding-bottom: 20px;
  padding-top: 70px;
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

#benefits.page{
  // padding-top: 50%;
  padding-right: 20px;
  padding-left: 20px;
}

.container{
  height: 100%;
  width: 100%;
}

#team{
  width: 90%;
  margin: auto;
  height: 230vh;
  margin: 5vw;
  padding: 5vw;
  box-sizing: border-box;
  background-color: white;
}

.normalSize{
  transform: scale(.75, .75);
}


#benefits .base{
  width: 100%;
  height: 100%;
  // background-color: purple;
  background-color: rgba(#800080, $alpha);
  position: relative;
  padding: 0px;
  margin-left: 0px;
}

.block{
  border-left: 3px solid white;
  border-right: 3px solid white;
  border-radius: 5em;
  box-sizing: border-box;
  background:#000 url('0.jpg');
  background-position: 0px;
}

#benefits .benefit{
  float: left;
  height: 100%;
  background-color: rgba(#008000, $alpha);
  height: 50%;
  position: absolute;
  bottom: 0%;
  width: 50%;
}

