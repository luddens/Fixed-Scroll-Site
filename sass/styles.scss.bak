#main{
  height: 200vh;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  margin: auto;
  z-index: 3;
  overflow-y: scroll;
  overflow-x: hidden;
  width: 100%;
  width: calc(100vw + 16px);
  top: 100vh;
  padding-top: 200vh;
  // pointer-events:none;
  // visibility: hidden;
}

#scrollTarget{
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  margin: auto;
  width: 97%;
  position: fixed;
  // top: -100vh;
  margin: auto;
}
  
@media (max-height: 640px){
  #scrollBounds{
    height: 50%;
    width: 25px;
    top: 15vh;
    bottom: 0px;
    margin:auto;
    position: fixed;
    background-color: #D8D8D8;
    z-index: 4;
    border-radius: 15px;
    overflow: hidden;
    margin-left: -30px;
    border: 2px solid white;
  }
}

@media (max-height: 260px){

  footer{
    height: 10vh;
    bottom: 0vh;
  }

  .fixedFooter{
    bottom: 0vh;
  }
}

@media (min-width: 1120px){
  #scrollTarget{
    margin: auto;
    width: calc(800px + 25vw);
  }

  #services .sidebar{
    width: 40%;
  }
  #testimonials .sidebar{
    width: 40%;
  }

  #banner{
    width: 100vw;
  }
} 

.testibab{
  background-color: green;
  height: 1000px;
}

.bannerPadding{
  height: 100vh;
}

